#########################
# Do not edit this file #
#########################

define say
$(info [Hello World] $1)
endef


CC := g++
LINK_FLAGS := -std=c++17 -Wall -Werror -g
CC_FLAGS := $(LINK_FLAGS) -c 


# Determine some more paths
HOSTNAME := $(shell hostname)
SUBMISSION_DIR := .
RESULTS_CPP_JSON := ./results-cpp.json

$(call say,Hostname: $(HOSTNAME))
$(call say,Submission dir: $(SUBMISSION_DIR))
$(call say,Results path: $(RESULTS_CPP_JSON))
#######


# Binary names
TESTS_BIN_NAME := main-tests
TESTS_BIN := ./$(TESTS_BIN_NAME)


#
TESTS_DEPS := $(SUBMISSION_DIR)/CPP_Tests.cpp $(wildcard $(SUBMISSION_DIR)/puhp-tests/*.hpp) $(SUBMISSION_DIR)/my_functions.hpp
$(call say,Test dependencies: $(TESTS_DEPS))


$(info )


#
default: help
.PHONY: default


#
help:
	@echo "***** Makefile Menu *****"
	@echo
	@echo "make build         ==> Build source files"
	@echo
	@echo "make test          ==> Run tests against your dynamic vector"
	@echo
	@echo "make clean         ==> Clean temporary build files"
.PHONY: help


# Build everything
build:	$(TESTS_BIN)
.PHONY: build


# Run tests
gradescope: clean
gradescope: test
tests: test
test: $(TESTS_BIN)
	$(call say,Executing: $<)
	$(TESTS_BIN)
.PHONY: tests test gradescope


#
$(SUBMISSION_DIR)/my_functions.o:	$(SUBMISSION_DIR)/my_functions.cpp $(SUBMISSION_DIR)/my_functions.hpp
	$(CC) $(CC_FLAGS) "$<" -o "$@"


#
$(SUBMISSION_DIR)/tests.o:	$(TESTS_DEPS)
	$(CC) $(CC_FLAGS) "$<" -o "$@"


# Link the test binary
$(TESTS_BIN):	$(SUBMISSION_DIR)/tests.o $(SUBMISSION_DIR)/my_functions.o
	$(call say,Building: $@)
	$(CC) $(LINK_FLAGS) $^ -o "$@"


#
clean:
	-rm -f $(TESTS_BIN)
	-rm -f $(RESULTS_CPP_JSON)
	-rm -f results*.json
	-rm *.o
.PHONY: clean


